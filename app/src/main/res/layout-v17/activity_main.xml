<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hemantdave.androidbaiscsnanodegreeproject2.MainActivity"
    android:textAlignment="center">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="5"

        android:columnCount="2"
        android:orientation="horizontal"
        android:id="@+id/grid"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:touchscreenBlocksFocus="false"
        android:columnOrderPreserved="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team 1"
            android:id="@+id/textView"
            android:layout_row="0"

            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:textAlignment="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Team 2"
            android:id="@+id/textView2"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="20sp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:textAlignment="center"
            android:layout_margin="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/team1TV"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:textAlignment="center"
            android:textColor="#0d236a" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/team2TV"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:textColor="#0d236a" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tag="first-three"
            android:text="@string/_3_point"
            android:id="@+id/button"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:background="#f67979"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:onClick="pointChange" />

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:tag="second-three"
            android:text="@string/_3_point"
            android:id="@+id/button4"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:background="#f67979"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:onClick="pointChange" />

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:tag="first-two"
            android:text="@string/_2_point"
            android:id="@+id/button3"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:background="#c6f495"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:onClick="pointChange" />

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:tag="second-two"
            android:text="@string/_2_point"
            android:id="@+id/button5"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:background="#c6f495"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:onClick="pointChange" />

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:tag="first-one"
            android:text="@string/_1_point"
            android:id="@+id/button2"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:background="#f8a3d2"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:onClick="pointChange" />

        <Button
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:tag="second-one"
            android:text="@string/_1_point"
            android:id="@+id/button6"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_rowSpan="1"
            android:background="#f8a3d2"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:onClick="pointChange" />
    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="reset"
        android:id="@+id/button7"

        android:layout_below="@+id/grid"
        android:layout_centerHorizontal="true"
        android:background="#3881da"
        android:layout_marginTop="10dp"
        android:onClick="reset" />

</RelativeLayout>
